<Window x:Class="DBTrainingProject.ContextMenuTableActions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DBTrainingProject"
        mc:Ignorable="d"
        Title="ContextMenuTableActions" Height="150" Width="200" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Name="Change"
                Grid.Row="0"
                Content="Change"
                FontSize="18"
                Click="Change_OnClick">
        </Button>
        <Button Name="Delete"
                Grid.Row="1"
                Content="Delete"
                FontSize="18"
                Click="Delete_OnClick">
        </Button>
    </Grid>
</Window>
